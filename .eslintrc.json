{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "consistent-return": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "testHelper.js"],
      "rules": {
        "global-require": "off",
        "import/no-extraneous-dependencies": "off",
        "node/no-unpublished-require": "off"
      }
    }
  ]
}

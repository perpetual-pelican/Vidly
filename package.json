{
  "name": "vidly",
  "version": "1.0.0",
  "license": "ISC",
  "repository": "https://github.com/perpetual-pelican/Vidly.git",
  "description": "a video rental processing app built with Node, Express, MongoDB, and React",
  "main": "backend/index.js",
  "scripts": {
    "prepare": "husky install",
    "install": "cd backend && npm ci && cd ../frontend && npm ci",
    "db": "cd backend && npx run-rs --mongod",
    "seed": "cd backend && node seed.js",
    "server": "cd backend && node index.js",
    "server-test": "cd backend && npx jest --coverage"
  },
  "devDependencies": {
    "eslint": "~7.30.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-import": "~2.22.1",
    "husky": "^6.0.0",
    "prettier": "2.3.1",
    "pretty-quick": "^3.1.1"
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.2.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  }
}
